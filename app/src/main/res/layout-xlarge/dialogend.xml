<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogFon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dMarginXLarge"
    android:background="@drawable/stl_preview_background_type1_blue"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="@dimen/dPaddingXLarge">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textcongrats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/levelPassed"
            android:textColor="@color/black95"
            android:textStyle="bold"
            android:textSize="@dimen/dTextSizeXLarge" />

        <RelativeLayout
            android:id="@+id/ratingBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dStarsHeightXLarge"
            android:layout_below="@id/textcongrats"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dStarsHeightXLarge"
                android:layout_centerHorizontal="true"
                android:src="@drawable/star3"
                android:visibility="gone"
                android:contentDescription="@string/starimg" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dStarsHeightXLarge"
                android:layout_centerHorizontal="true"
                android:src="@drawable/star2"
                android:visibility="gone"
                android:contentDescription="@string/starimg" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dStarsHeightXLarge"
                android:layout_centerHorizontal="true"
                android:src="@drawable/star1"
                android:visibility="gone"
                android:contentDescription="@string/starimg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textdescriptionend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dPaddingXLarge"
            android:text="@string/leveltwoEnd"
            android:textColor="@color/black95"
            android:textSize="@dimen/dTextSizeXLarge"
            android:layout_below="@id/ratingBar"/>

        <TextView
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textdescriptionend"
            android:layout_marginTop="@dimen/dMarginXLarge"
            android:layout_marginBottom="@dimen/dMarginXLarge"
            android:background="@drawable/stl_button_stroke_black95_press_white"
            android:gravity="center"
            android:paddingLeft="@dimen/dPaddingXLarge"
            android:paddingRight="@dimen/dPaddingXLarge"
            android:text="@string/textContinue"
            android:textAllCaps="true"
            android:textColor="@color/black95"
            android:textSize="@dimen/dTextSizeXLarge" />

    </RelativeLayout>

</LinearLayout>
