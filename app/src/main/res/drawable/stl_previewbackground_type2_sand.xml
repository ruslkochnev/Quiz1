<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/black60" />
            <corners android:radius="16dp" />
            <solid android:color="@color/black60" />

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:end="2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/black60" />
            <corners android:radius="16dp" />
            <gradient
                android:endColor="@color/type2_endColor"
                android:gradientRadius="600"
                android:startColor="@color/type2_startColor"
                android:type="radial" />
        </shape>
    </item>
</layer-list>