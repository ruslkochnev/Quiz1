    <item
        android:width="640dp"
        android:height="360dp">
        <shape>
            <gradient
                android:endColor="#6dc0d8"
                android:startColor="#72bad7" />
        </shape>
    </item>

    <item
        android:start="-150dp"
        >
        <shape>
            <gradient
                android:gradientRadius="400dp"
                android:startColor="#ffe266"
                android:type="radial" />
        </shape>
    </item>
    <item

        android:start="-150dp"
        android:top="-70dp">
        <shape>
            <gradient
                android:gradientRadius="100dp"
                android:startColor="#FFFFFF"
                android:type="radial" />
        </shape>
    </item>


</layer-list>